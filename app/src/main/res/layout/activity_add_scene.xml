<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScene">

    <TextView
        android:id="@+id/addSceneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Scene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 确认按钮 -->

    <!-- 展示用户选择的操作列表 -->

    <Button
        android:id="@+id/addScene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toStartOf="@+id/confirmScene"
        app:layout_constraintStart_toEndOf="@+id/addSceneText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmScene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/selectedItemsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addScene">
        <!-- 这里会动态添加用户选择的操作条目 -->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>